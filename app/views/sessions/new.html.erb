<div class="login-cover text-center">
  <div class="logo pl-2">
    <%= link_to "<img style='width: 40px' src='https://www.freelogodesign.org/file/app/client/thumb/2afd3b18-cda1-4bc6-aad2-71500f4b9a94_200x200.png?1596903768165'>".html_safe, users_path %>
  </div>
  <h4 class ='font-italic font-weight-bold sign-in-quote'>'If you can write "hello world" you can change the world.'</h4>
  <h3 class = 'sign-in-twitter text-primary'>Log in to Coding Twitter</h3>
  <%= form_tag '/sessions', :method => 'post' do %>
    <%= label_tag :username, 'Please enter Username' %> <br />
    <%= text_field_tag :username, params[:username], class: 'textarea' %> <br />
    <%= submit_tag "Login", class: 'btn btn-primary login-btn' %> <br />
    <p class="text-muted new-account"> Don't have an account? </p>
    <%= link_to "Sign up for Coding Twitter", new_user_path, class: 'new-account' %>
  <% end %>
</div>
